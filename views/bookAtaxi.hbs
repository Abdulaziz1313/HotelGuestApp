<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="manifest" href="/manifest.json" />
    <title>Book a Taxi</title>
</head>
<body>
    <nav>
        <h4>AHGA</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Sign Up</a></li>
        </ul>
    </nav>

    
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Taxi Booking Form
            </div>
            <div class="card-body">
                <form id="booking-form">
                    <div class="mb-3">
                        <label for="pickup-location" class="form-label">Pickup Location</label>
                        <input type="text" class="form-control" id="pickup-location" name="pickup-location">
                    </div>
                    <div class="mb-3">
                        <label for="destination" class="form-label">Destination</label>
                        <input type="text" class="form-control" id="destination" name="destination">
                    </div>
                    <button type="button" class="btn btn-primary" onclick="bookTaxi()">Book Now</button>
                </form>
            </div>
        </div>
        <div id="booking-status" class="mt-3"></div>
    </div>

    <script>
        function bookTaxi() {
            var pickupLocation = document.getElementById("pickup-location").value.trim();
            var destination = document.getElementById("destination").value.trim();

            // Make API call to book a taxi
            // Replace the URL and API key with the actual Ireland Uber API endpoint and API key
            var apiUrl = "https://example.com/api/book-taxi";
            var apiKey = "your-api-key";

            // Example of sending data to the API (you may need to adjust this based on the actual API requirements)
            var requestData = {
                pickupLocation: pickupLocation,
                destination: destination,
                apiKey: apiKey
            };

            fetch(apiUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestData),
            })
            .then(response => response.json())
            .then(data => {
                // Display booking status
                document.getElementById("booking-status").innerHTML = data.message;
            })
            .catch((error) => {
                console.error('Error:', error);
                // Display error message
                document.getElementById("booking-status").innerHTML = "An error occurred while booking. Please try again later.";
            });
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
