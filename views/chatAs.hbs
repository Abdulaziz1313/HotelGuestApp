<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="manifest" href="/manifest.json" />
    <title>AbdulazizApp</title>
</head>
<body>
    <nav>
        <h4>AHGA</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Sign Up</a></li>
        </ul>
    </nav>

    
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Chat Support
            </div>
            <div class="card-body" id="chat-messages">
                <!-- Chat messages will be displayed here -->
            </div>
            <div class="card-footer">
                <input type="text" class="form-control mb-2" id="message-input" placeholder="Type your message...">
                <button type="button" class="btn btn-primary" onclick="sendMessage()">Send</button>
            </div>
        </div>

        <!-- Form for booking a taxi -->
        <div class="card mt-4">
            <div class="card-header">
                Book a Taxi
            </div>
            <div class="card-body">
                <form action="/auth/bookTaxi" method="POST">
                    <div class="mb-3">
                        <label for="pickupLocation" class="form-label">Pickup Location</label>
                        <input type="text" class="form-control" id="pickupLocation" name="pickupLocation" required>
                    </div>
                    <div class="mb-3">
                        <label for="destination" class="form-label">Destination</label>
                        <input type="text" class="form-control" id="destination" name="destination" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Book Taxi</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Function to send a message
        function sendMessage() {
            var messageInput = document.getElementById("message-input");
            var message = messageInput.value.trim();
            if (message !== "") {
                // Append the message to the chat
                var chatMessages = document.getElementById("chat-messages");
                var messageDiv = document.createElement("div");
                messageDiv.classList.add("mb-2", "alert", "alert-info");
                messageDiv.textContent = message;
                chatMessages.appendChild(messageDiv);
                // Clear the input field
                messageInput.value = "";
                // Scroll to the bottom of the chat
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
